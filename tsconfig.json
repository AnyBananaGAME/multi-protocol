{
  "compilerOptions": {
          "target": "ES2020",
          "module": "commonjs",
          "resolveJsonModule": true,
          "esModuleInterop": true,
          "moduleResolution": "node",
          "forceConsistentCasingInFileNames": true,
          "strict": true,
          "skipLibCheck": true,
          "declaration": true,
          "emitDecoratorMetadata": true,
          "experimentalDecorators": true,
          "paths": {
                  "@/*": ["./src/*"]
          },
          "outDir": "dist",
          "rootDir": "src",
          "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/versions/**/*.d.ts",
    "src/versions/**/*.js"
  ],
  "exclude": ["node_modules", "dist", "tests", "scripts"]
}
